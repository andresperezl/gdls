{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\[(?:sub_resource|node|connection)\\b",
      "end": "^(?=\\s*\\[)"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*\\[.*\\]\\s*$",
    "decreaseIndentPattern": "^\\s*\\[.*\\]\\s*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_/]*"
}
